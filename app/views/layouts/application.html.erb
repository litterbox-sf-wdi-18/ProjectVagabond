<!DOCTYPE html>
<html>
<head>
  <title>Vagabond</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
   <nav class="navbar navbar-static-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse_button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Vagabond</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="collpase_button">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.email %><span class="caret"></span></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="<%= "#{cities_path}" %>">Cities</a></li>
                    <li><a href="<%= "#{user_path(current_user)}" %>">My Profile</a></li>
                    <li class="divider"></li>
                    <li><a href="<%= "#{logout_path}" %>">Logout</a></li>
                  </ul>
                </li>
            </ul>
          </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  <% end %>

  <!-- Flash messaging -->
  <% flash.each do |key, value| %>
    <% if key == "notice" %>
      <%= content_tag :div, value, class: "text-center alert alert-warning" %>
    <% elsif key == "alert" %>
      <%= content_tag :div, value, class: "text-center alert alert-danger" %>
    <% elsif key == "login_ok" %>
      <%= content_tag :div, value, class: "text-center alert alert-success" %>
    <% else %>
      <%= content_tag :div, value, class: "text-center alert alert-info" %>
    <% end %>
  <% end %>

  <div class='container'>

    <%= yield %>

  </div>
</body>
</html>
