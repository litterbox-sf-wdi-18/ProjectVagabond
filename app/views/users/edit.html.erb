<% if @errors %>
  <p>Fix these problems with your update:</p>
  <ul>
    <% @errors.each do |error, mesg| %>
      <li><%= error %>: <%= mesg %></li>
    <% end %>
  </ul>
<% end %>

<div class='row'>
  <div class='col-md-6'>
    <div class='well'>

      <div class='row'>
        <div class='col-md-6 col-md-offset-1'>
          <h3>Edit User</h3>
        </div>
      </div>
      <br>

      <%= form_for @user, method: "put", html: { multipart: "true" } do |f| %>
        <div class='row'>
          <div class='col-md-4 text-right'>
            <%= f.label "First name: " %>
          </div>
          <div class='col-md-7'>
            <%= f.text_field :first_name, autofocus: "true" %>
          </div>
        </div>
        <br>
        <div class='row'>
          <div class='col-md-4 text-right'>
            <%= f.label "Last name: " %>
          </div>
          <div class='col-md-7'>
            <%= f.text_field :last_name %>
          </div>
        </div>
        <br>
        <div class='row'>
          <div class='col-md-4 text-right'>
            <%= f.label "Current city: " %>
          </div>
          <div class='col-md-7'>
            <%= f.text_field :current_city %>
          </div>
        </div>
        <div class='row'>
          <div class='col-md-4 text-right'>
            <%= f.label "Photo: " %>
          </div>
          <div class='col-md-7'>
            <%= f.file_field :avatar %>
          </div>
        </div>
        <br><br>
        <div class='row'>
          <div class='col-md-11 text-right'>
            <%= f.submit "Update", class: "btn btn-lg btn-primary" %>
            <br>
          </div>
        </div>
        <br>
      <% end %>

    </div>    <!-- well -->
  </div>
</div>

