<h1><%= @log.title %> <small>by <%= @log.user.first_name %> <%= @log.user.last_name %></small></h1>
<h3><small>Travel Log for:</small> <%= @log.city.name %></h3>
<br>
<p><%= @log.content %></p>
<br>

<% if current_user == @log.user %>
  <div class='row'>
    <div class='col-md-1'>
      <%= link_to 'Edit', edit_user_log_path(@log.user, @log), class: 'btn btn-primary' %>
    </div>
    <div class='col-md-1'>
      <%= link_to 'Delete', user_log_path(@log.user, @log),
        class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
  <br>
<% end %>

<!-- if a referring page was set -->
<% if @back %>
  <%= link_to "Back to #{@back}", @back_path %>
<% end %>

